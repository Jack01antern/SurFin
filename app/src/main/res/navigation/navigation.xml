<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.surfin.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.surfin.account.AccountFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/emergencyFragment"
        android:name="com.example.surfin.emergency.EmergencyFragment"
        android:label="EmergencyFragment"
        tools:layout="@layout/fragment_emergency"/>


    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.surfin.explore.ExploreFragment"
        android:label="ExploreFragment"
        tools:layout="@layout/fragment_explore"/>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.surfin.weather.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather" />

    <action
        android:id="@+id/action_navigate_to_home_fragment" app:destination="@id/homeFragment" />

    <action
        android:id="@+id/action_navigate_to_emergency_fragment" app:destination="@id/emergencyFragment" />

    <action
        android:id="@+id/action_navigate_to_explore_fragment" app:destination="@id/exploreFragment" />

    <action
        android:id="@+id/action_navigate_to_account_fragment" app:destination="@id/accountFragment" />

    <action
        android:id="@+id/action_navigate_to_weather_fragment" app:destination="@id/weatherFragment" />

</navigation>