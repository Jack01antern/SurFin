<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AddHistoryDialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowBackground">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="round_image_view">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="color">@color/translucent_40</item>
        <item name="android:animation">@null</item>
    </style>

    <style name="weather_element_title">
        <item name="fontFamily">rounded</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="weather_element_value">
        <item name="fontFamily">rounded</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="history_item_title">
        <item name="fontFamily">rounded</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="history_item_value">
        <item name="fontFamily">rounded</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">2dp</item>
    </style>


    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

</resources>