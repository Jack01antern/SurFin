<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_marginHorizontal="20dp"
    android:background="@color/transparent"
    app:cardCornerRadius="20dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="問題回報"
            android:textAlignment="center"
            android:textColor="@color/primary_darker_gray"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/input_report"
            app:layout_constraintStart_toStartOf="@id/input_report"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_report"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:foreground="@drawable/border"
            android:gravity="top"
            android:hint="@string/input_content"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />


        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/btn_round"
            android:text="@string/submit"
            app:layout_constraintEnd_toEndOf="@id/input_report"
            app:layout_constraintStart_toStartOf="@id/input_report"
            app:layout_constraintTop_toBottomOf="@id/input_report"
            tools:text="submit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
