<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_gray"
        tools:context=".account.AccountFragment">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="@color/background_light_gray"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/account_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:foreground="@drawable/account_circle_background"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gemma"
                app:layout_constraintBottom_toBottomOf="@id/account_background"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/account_background"
                app:layout_constraintStart_toStartOf="@id/account_background"
                app:layout_constraintTop_toTopOf="@id/account_background"
                app:layout_constraintWidth_percent="0.5"
                app:shapeAppearanceOverlay="@style/circular"
                app:srcCompat="@drawable/baseline_account_circle_24" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Gemma Ward"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/thumbnail"
                app:layout_constraintStart_toStartOf="@id/thumbnail"
                app:layout_constraintTop_toBottomOf="@id/thumbnail"
                tools:text="Gemma Ward" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            app:cardCornerRadius="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_background">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="32dp">

                <ImageButton
                    android:id="@+id/btn_activity_history"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/primary_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/diary"
                    android:text="@string/activity_history"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/btn_collection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.2" />

                <ImageButton
                    android:id="@+id/btn_collection"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/primary_gray"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/save_instagram"
                    android:text="@string/collection"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/btn_language"
                    app:layout_constraintStart_toEndOf="@id/btn_activity_history"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.2" />


                <ImageButton
                    android:id="@+id/btn_language"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/primary_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/language"
                    android:text="@string/switch_language"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_collection"
                    app:layout_constraintTop_toTopOf="parent"

                    app:layout_constraintWidth_percent="0.2" />

                <ImageButton
                    android:id="@+id/btn_provide_spots"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/primary_navy"
                    android:scaleType="fitCenter"
                    android:src="@drawable/surfboard"
                    android:text="@string/provide_spots"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/btn_contact_us"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_activity_history"
                    app:layout_constraintWidth_percent="0.2" />

                <ImageButton
                    android:id="@+id/btn_contact_us"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/primary_gray"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/support"
                    android:text="@string/contact_us"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/btn_report_problem"
                    app:layout_constraintStart_toEndOf="@id/btn_provide_spots"
                    app:layout_constraintTop_toBottomOf="@id/btn_collection"
                    app:layout_constraintWidth_percent="0.2" />


                <ImageButton
                    android:id="@+id/btn_report_problem"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="8dp"
                    android:background="@color/primary_gray"
                    android:scaleType="fitCenter"
                    android:src="@drawable/problem"
                    android:text="@string/report_problem"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_contact_us"
                    app:layout_constraintTop_toBottomOf="@id/btn_language"
                    app:layout_constraintWidth_percent="0.2" />


                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintBottom_toBottomOf="@id/btn_language"
                    app:layout_constraintEnd_toEndOf="@id/btn_language"
                    app:layout_constraintStart_toStartOf="@id/btn_language"
                    app:layout_constraintTop_toTopOf="@id/btn_language" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>